<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <a class="navbar-brand glyphicon glyphicon-heart" href="@Url.Action("Index", "Home")"></a>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Foodie & the BlowFish <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Recipes <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Breakfast", "RecipeSubCategory", "Recipe", new { subcategory = "Breakfast" }, null)</li>
                            <li>@Html.ActionLink("Lunch", "RecipeSubCategory", "Recipe", new { subcategory = "Lunch" }, null)</li>
                            <li>@Html.ActionLink("Dinner", "RecipeSubCategory", "Recipe", new { subcategory = "Dinner" }, null)</li>
                            <li>@Html.ActionLink("Dessert", "RecipeSubCategory", "Recipe", new { subcategory = "Dessert" }, null)</li>
                            <li>@Html.ActionLink("Drinks", "RecipeSubCategory", "Recipe", new { subcategory = "Drinks" }, null)</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Around The World <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("North America", "ReviewSubCategory", "Review", new { subcategory = "NorthAmerica" }, null)</li>
                            <li>@Html.ActionLink("South America", "ReviewSubCategory", "Review", new { subcategory = "SouthAmerica" }, null)</li>
                            <li>@Html.ActionLink("Asia", "ReviewSubCategory", "Review", new { subcategory = "Asia" }, null)</li>
                            <li>@Html.ActionLink("Europe", "ReviewSubCategory", "Review", new { subcategory = "Europe" }, null)</li>
                            <li>@Html.ActionLink("Australia", "ReviewSubCategory", "Review", new { subcategory = "Australia" }, null)</li>
                            <li>@Html.ActionLink("Africa", "ReviewSubCategory", "Review", new { subcategory = "Africa" }, null)</li>
                            <li>@Html.ActionLink("Antarctica", "ReviewSubCategory", "Review", new { subcategory = "Antarctica" }, null)</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("BlowFish's Travels", "Static", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")

                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group" style="margin-left: 35px;">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br>
        <br>
        <br>
        <br>

        @RenderBody()
        <hr>
        <footer>
            <p>&copy; @DateTime.Now.Year - Foodie and the BlowFish</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>