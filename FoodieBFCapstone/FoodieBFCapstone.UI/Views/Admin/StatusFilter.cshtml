@using System.Security.Cryptography.X509Certificates
@using FoodieBFCapstone.UI.Models
@model FoodieBFCapstone.UI.Models.AdminVM

@{
    ViewBag.Title = "StatusFilter";
}

<h2 align="center">Article</h2>

@using (Html.BeginForm("StatusFilter", "Admin", FormMethod.Post))
{

   
<br/>


    <div>
        @foreach (var item in Model.Blog)
        {
            <div class="row">
                <div class="col-md-2">
                    <img src="@item.MainPictureUrl" class="item"/>
                </div>
                <div class="col-md-5" style="margin: 10px;">
                    <p>
                        <h4>@item.Title</h4>
                    </p>
                    <p>Description: @item.Summary</p>
                    @*<p style="color: teal">Author: @item.Author.FirstName @item.Author.LastName</p>*@
                    <p>Created On: @item.CreatedOn.ToShortDateString()</p>
                </div>
                <div class="col-md-2">
                    <label style="margin-right: 10px;">Status: @item.Status</label>
                    <br/>
                    
                    <a class="btn btn-primary" href="@Url.Action("Details", "Home", new {blogId = item.BlogId})">View Article</a>
                    <br />
                    <br />
                </div>
            </div>
        }
    </div>
}

<div id="sidebar" class="sidebar" align="left">
    <h4>Search By Status</h4>
    <p>@Html.ActionLink("Pending", "Home", "Admin", new { id = "1" }, null)</p>
    <p>@Html.ActionLink("Active", "StatusFilter", "Admin", new { id = "2" }, null)</p>
    <p>@Html.ActionLink("Inactive", "StatusFilter", "Admin", new { id = "3" }, null)</p>
    <p>@Html.ActionLink("Denied", "StatusFilter", "Admin", new { id = "4" }, null)</p>
    <p>@Html.ActionLink("Featured", "StatusFilter", "Admin", new { id = "5" }, null)</p>
</div>

@section scripts
{
    <script src="~/Scripts/stickyfill.min.js"></script>
    <script src="~/Scripts/App/sidebar.js"></script>
}