@model FoodieBFCapstone.UI.Models.AdminVM

@{
    ViewBag.Title = "CreatePost";
}
<style>
    .redText {
        color: #E53C37;
    }

    .error {
        border: 2px solid #E53C37;
    }
</style>
<h2>CreatePost</h2>

@using (Html.BeginForm("CreatePost", "Admin", FormMethod.Post, new { id = "newPost" }))
{
    <div class="form-group" >
        <div class="form-group">
            @Html.LabelFor(m => m.StaticPage.Title, "Title", new { @class = "control-label" })
            @Html.ValidationMessageFor(m => m.StaticPage.Title, null, new { @class = "redText" })
            @Html.EditorFor(m => m.StaticPage.Title, new {HtmlAttributes = new {@class = "form-control", @placeholder="Maximum of 100 characters"}})
            
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.StaticPage.MiniTitle, "Link Name", new {@class = "control-label"})
            @Html.ValidationMessageFor(m => m.StaticPage.MiniTitle, null, new { @class = "redText" })
            @Html.EditorFor(m => m.StaticPage.MiniTitle, new {HtmlAttributes = new {@class = "form-control", @placeholder = "Maximum of 20 characters" } })
            
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.StaticPage.AdminPageContent, "Page Content", new { @class = "control-label", id="tinyLabel"})
            @Html.ValidationMessageFor(m => m.StaticPage.AdminPageContent, null, new { @class = "redText" })
            @Html.TextAreaFor(m => m.StaticPage.AdminPageContent, new { @id = "Textarea", name = "tinyPost" })
            <span id="tinyError" class="redText"></span>
        </div>
        @*<input type="hidden" id="Created"/>*@
        <a href="@Url.Action("Home","Admin")" class="btn btn-primary">Cancel</a>
        <button class="btn btn-primary" type="submit" id="SubYo">Submit</button>
        
    </div>
}

@section scripts{
    <script src='//cdn.tinymce.com/4/tinymce.min.js'></script>
    <script src="~/Scripts/App/modernTinyMCE.js"></script>

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/App/jquery-validate-default.js"></script> 
    <script type="text/javascript" src="~/Scripts/App/validate-static-page.js"></script>


}

